$dark = #2D3744
$dark_app = #15181C
$titanium = #F2F4FA
$brand = #7446F6;
$cream = #F2F2F0

$alert_red = #E73D3D
$alert_blue = #2570B6


main-gradient(dark_percent = 0%)
    background linear-gradient(90deg, darken(#5c32d4, dark_percent), darken(#32c0c0, dark_percent))

transparify(color, percent)
    mix(color, transparent, percent)

cardify(percent = 4%)
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1)
    background transparify(white, percent)
    border-radius 6px
